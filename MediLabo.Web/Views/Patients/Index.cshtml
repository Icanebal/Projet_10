@model List<MediLabo.Web.Models.ViewModels.PatientViewModel>
@inject MediLabo.Web.Services.AuthService AuthService

@{
    ViewData["Title"] = "Liste des patients";
	var isAdmin = AuthService.IsAdmin();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            Nouveau patient
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">Aucun patient enregistré pour le moment.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nom complet</th>
                        <th>Date de naissance</th>
                        <th>Âge</th>
                        <th>Genre</th>
                        <th>Téléphone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@patient.Id" class="text-decoration-none">
                                    @patient.FullName
                                </a>
                            </td>
                            <td>@patient.FormattedBirthDate</td>
                            <td>@patient.Age ans</td>
                            <td>@patient.GenderName</td>
                            <td>@(patient.Phone ?? "-")</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-outline-info" title="Détails">
                                        Détails
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-outline-warning" title="Modifier">
                                        Modifier
                                    </a>
                                    @if (isAdmin)
                                    {
                                        <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-outline-danger" title="Supprimer">
                                            Supprimer
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">Total : <strong>@Model.Count</strong> patient(s)</p>
        </div>
    }
</div>
