@model MediLabo.Web.Models.ViewModels.PatientViewModel
@inject MediLabo.Web.Services.AuthService AuthService

@{
    ViewData["Title"] = "Détails du patient";
    var isAdmin = AuthService.IsAdmin();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
            <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@Model.FullName</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Prénom</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Nom</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">Date de naissance</dt>
                        <dd class="col-sm-8">@Model.FormattedBirthDate</dd>

                        <dt class="col-sm-4">Âge</dt>
                        <dd class="col-sm-8">@Model.Age ans</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Genre</dt>
                        <dd class="col-sm-8">@Model.GenderName</dd>

                        <dt class="col-sm-4">Adresse</dt>
                        <dd class="col-sm-8">@(Model.Address ?? "Non renseignée")</dd>

                        <dt class="col-sm-4">Téléphone</dt>
                        <dd class="col-sm-8">@(Model.Phone ?? "Non renseigné")</dd>

                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier ce patient</a>
            @if(isAdmin)
            {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Supprimer ce patient</a>
            }
        </div>
    </div>
</div>
