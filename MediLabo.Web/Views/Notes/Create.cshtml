@using MediLabo.Web.Models.ViewModels
@model MediLabo.Web.Models.ViewModels.CreateNoteViewModel
@{
    ViewData["Title"] = "Nouvelle note";
    var patient = ViewBag.Patient as PatientViewModel;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Nouvelle note médicale</h4>
                    <p class="mb-0 text-muted">
                        Patient : <strong>@patient?.FirstName @patient?.LastName</strong>
                    </p>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="PatientId" />

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Contenu de la note</label>
                            <textarea asp-for="Content" class="form-control" rows="10" placeholder="Saisir les observations médicales..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="PatientNotes" asp-route-id="@Model.PatientId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}