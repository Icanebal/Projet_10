@model List<MediLabo.Web.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Gestion des utilisateurs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
            Créer un utilisateur
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">Aucun utilisateur trouvé.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nom complet</th>
                        <th>Email</th>
                        <th>Rôles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Roles != null && user.Roles.Any())
                                {
                                    @string.Join(", ", user.Roles)
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">Total : <strong>@Model.Count</strong> utilisateur(s)</p>
        </div>
    }
</div>
